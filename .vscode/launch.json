            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
        },
        {
            "name": "ðŸŽ­ Debug Current Scene",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "C:\\Program Files\\Godot\\Godot",
            "args": [
              "${fileDirname}/${fileBasenameNoExtension}.tscn"
